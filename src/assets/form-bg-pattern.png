<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0f3fa; stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d1e9ff; stop-opacity:1" />
    </linearGradient>
    <pattern id="circle-pattern" x="0" y="0" width="30" height="30" patternUnits="userSpaceOnUse">
      <circle cx="15" cy="15" r="6" fill="rgba(0, 123, 255, 0.15)" />
      <circle cx="15" cy="15" r="2" fill="rgba(0, 123, 255, 0.4)" />
    </pattern>
    <pattern id="diamond-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
      <rect x="10" y="10" width="20" height="20" transform="rotate(45 20 20)" fill="rgba(255, 193, 7, 0.1)" />
    </pattern>
  </defs>
  <rect width="800" height="600" fill="url(#bg-gradient)" />
  <rect width="800" height="600" fill="url(#circle-pattern)" />
  <rect width="800" height="600" fill="url(#diamond-pattern)" />
</svg>
